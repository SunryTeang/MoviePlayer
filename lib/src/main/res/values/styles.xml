<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TubiPlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TubiSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/tubi_tv_seek_bar</item>
        <item name="android:thumb">@drawable/tubi_tv_drawable_scrubber_selector</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <style name="TubiEmptyToggleButton">
        <item name="android:layout_width">@dimen/view_tubi_controller_options_button_width</item>
        <item name="android:layout_height">@dimen/view_tubi_controller_options_height</item>
        <item name="android:text">""</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>

    <style name="TubiVideoButton">
        <item name="android:layout_width">@dimen/view_tubi_controller_video_button_width</item>
        <item name="android:layout_height">@dimen/view_tubi_controller_video_button_height</item>
        <item name="android:layout_marginLeft">
            @dimen/view_tubi_controller_video_button_margin_left
        </item>
        <item name="android:layout_marginRight">
            @dimen/view_tubi_controller_video_button_margin_right
        </item>
        <item name="android:layout_marginTop">@dimen/view_tubi_controller_video_button_margin_top
        </item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/tubi_tv_player_controls_overlay_dark</item>
        <item name="colorPrimary">@color/tubi_tv_player_controls_overlay_dark</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/tubi_tv_player_controls_overlay_dark</item>

        <!-- Additionally if you want animations when dialog opening -->
        <!--<item name="android:windowEnterAnimation">@anim/slide_up</item>-->
        <!--<item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>

</resources>